@model Wishler.ViewModels.RegisterViewModel

@{
    Layout = "_RegisterLogin";
}

@{
    ViewData["Title"] = "Sign Up";
}

<form method="post" class="main_register-page">
    <div>
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" placeholder="Name">
        <span class="error" asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Email">E-mail</label>
        <input asp-for="Email" type="text" placeholder="Example@gmail.com">
        <span class="error" asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" placeholder="Password">
        <span class="error" asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm">Confirm password</label>
        <input asp-for="PasswordConfirm" type="password" placeholder="Password">
        <span class="error" asp-validation-for="Password"></span>
    </div>
    <button class="register_submit" type="submit">Submit</button>
</form>

@section YandexGoogle
{
    <a href="" class="sign-up-with">
        <div>
            <img src="~/pictures/Login&Register/yandex.png" alt="">
            <p>Sign up with Yandex</p>
        </div>
    </a>
    <a href="" class="sign-up-with">
        <div>
            <img src="~/pictures/Login&Register/google.png" alt="">
            <p>Sign up with Google</p>
        </div>
    </a>
}

@section RedirectLink
{
    <a asp-controller="Account" asp-action="Login">Already have an account?</a>
}